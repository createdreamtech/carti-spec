{
    "$id": "carti_package_schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "A package description for Cartesi Machines",
    "type": "object",
    "$ref": "#/definitions/eth2near",
    "definitions": {
      "machineHash": {
          "type":"string"
      },
      "name": {
          "type":"string"
      },
      "version": {
          "type": "string",
          "pattern": "^v\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
      },
      "description": {
          "type": "string"
      },
      "assets": {
          "type": "array",
          "items": {
              "$ref":"#/definitions/asset"
          }
      },
      "asset": {
          "type": "object",
          "properties": {
              "name": {
                  "type": "string"
              },
              "cid" : {

              }
          },
          "required": ["name", "cid"]
      }
    }
}